<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.muhan.smart.dao.MallUserMapper">
    <!--共用部分-->
    <sql id="Basic_Colum_list">
        id, username, password, email, phone, question, answer, role, create_time, update_time
    </sql>

    <!--查询-->
    <select id="queryById" resultType="com.muhan.smart.pojo.MallUser">
        select
            <include refid="Basic_Colum_list" />
        from mall_user
        where id = #{id}
    </select>


</mapper>