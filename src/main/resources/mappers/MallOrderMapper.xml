<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.muhan.smart.dao.MallOrderMapper">
    <!--共用部分-->
    <sql id="Basic_Colum_List">
        id, order_no, user_id, shipping_id, payment, payment_type, postage, status, payment_time, send_time, end_time, close_time, create_time, update_time
    </sql>

    <select id="queryById" resultType="com.muhan.smart.pojo.MallOrder">
        select
        <include refid="Basic_Colum_List" />
        from mall_order
        where id = #{id}
    </select>
</mapper>